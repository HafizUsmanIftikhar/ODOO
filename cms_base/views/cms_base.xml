<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- CMS Department -->
        <record id="view_cms_department_form" model="ir.ui.view">
            <field name="name">cms.department.form</field>
            <field name="model">cms.department</field>
            <field name="arch" type="xml">
                <form string="Department">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="programs_offered_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- CMS Program -->
        <record id="view_cms_program_form" model="ir.ui.view">
            <field name="name">cms.program.form</field>
            <field name="model">cms.program</field>
            <field name="arch" type="xml">
                <form string="Program">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="duration"/>
                            <field name="eligibility"/>
                            <field name="department_id"/>
                            <field name="program_line_ids" widget="one2many_list"/>
                            <field name="programoffered_ids" widget="one2many_list"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- CMS Program Line -->
        <record id="view_cms_program_line_form" model="ir.ui.view">
            <field name="name">cms.program.line.form</field>
            <field name="model">cms.program.line</field>
            <field name="arch" type="xml">
                <form string="Program Line">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="semester"/>
                            <field name="course"/>
                            <field name="program_id"/>
                            <field name="course_ids" widget="one2many_list"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- CMS Program Offered -->
        <record id="view_cms_program_offered_form" model="ir.ui.view">
            <field name="name">cms.program.offered.form</field>
            <field name="model">cms.program.offered</field>
            <field name="arch" type="xml">
                <form string="Program Offered">
                    <sheet>
                        <group>
                            <field name="course_code"/>
                            <field name="name"/>
                            <field name="credits_hours"/>
                            <field name="program_id"/>
                            <field name="semester_id"/>
                            <field name="program_offer_line_ids" widget="one2many_list"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- CMS Semester -->
        <record id="view_cms_semester_form" model="ir.ui.view">
            <field name="name">cms.semester.form</field>
            <field name="model">cms.semester</field>
            <field name="arch" type="xml">
                <form string="Semester">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="program_offered_ids" widget="one2many_list"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
            </data>
</odoo>